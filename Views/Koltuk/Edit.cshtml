@model KTRS.Models.Koltuk
@{
    ViewData["Title"] = "Koltuk Düzenle";
}

<h2>Koltuk Düzenle</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="KatId" />

    <div class="form-group">
        <label>Koltuk No</label>
        <input asp-for="KoltukNo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Row Index</label>
        <input asp-for="RowIndex" class="form-control" />
    </div>
    <div class="form-group">
        <label>Column Index</label>
        <input asp-for="ColumnIndex" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <input asp-for="Durum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input asp-for="Aciklama" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" asp-route-katId="@Model.KatId" class="btn btn-secondary">İptal</a>
</form>
