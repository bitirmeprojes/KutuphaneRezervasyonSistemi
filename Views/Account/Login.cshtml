@{
    ViewData["Title"] = "Giriş Yap";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Kütüphane Rezervasyon Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 4rem;
            max-width: 600px;
            width: 100%;
        }

        .login-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .login-header h2 {
                font-size: 24px;
                font-weight: bold;
                color: #6c757d;
            }

            .login-header p {
                font-size: 14px;
                color: #adb5bd;
            }

        .form-control:focus {
            box-shadow: none;
            border-color: #343a40;
        }

        .btn-primary {
            background-color: #343a40;
            border-color: #343a40;
        }

            .btn-primary:hover {
                background-color: #23272b;
                border-color: #23272b;
            }

        .form-check-label {
            margin-left: 0.3rem;
        }

        .forgot-password {
            display: block;
            margin-top: 1rem;
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .social-login i {
            font-size: 18px;
            margin-right: 8px;
        }
    </style>



</head>
<body>
    <div class="login-container container parent justify-content-center align-items-center h-100">
        <div class="login-header">
            <h2>Kütüphane Rezervasyon Sistemi</h2>
            <p>Lütfen giriş yapmak için bilgilerinizi girin</p>
        </div>
        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="Username" class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="Kullanıcı adınızı girin" required>
                <div class="invalid-feedback">Lütfen kullanıcı adınızı girin.</div>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifrenizi girin" required>
                <div class="invalid-feedback">Lütfen şifrenizi girin.</div>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
                <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            <a href="#" class="forgot-password">Şifremi unuttum?</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>
