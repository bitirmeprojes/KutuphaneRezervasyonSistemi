@model KTRS.Models.Users
@{
    ViewData["Title"] = "Kayıt Ol";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Kütüphane Rezervasyon Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .register-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 4rem;
            max-width: 600px;
            width: 100%;
        }

        .register-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .register-header h2 {
                font-size: 24px;
                font-weight: bold;
                color: #6c757d;
            }

            .register-header p {
                font-size: 14px;
                color: #adb5bd;
            }

        .form-control:focus {
            box-shadow: none;
            border-color: #343a40;
        }

        .btn-primary {
            background-color: #343a40;
            border-color: #343a40;
        }

            .btn-primary:hover {
                background-color: #23272b;
                border-color: #23272b;
            }

        .form-check-label {
            margin-left: 0.3rem;
        }

        .login-link {
            display: block;
            margin-top: 1rem;
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
            text-align: center;
        }

            .login-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="register-container container parent justify-content-center align-items-center h-100">
        <div class="register-header">
            <h2>Kütüphane Rezervasyon Sistemi</h2>
            <p>Lütfen kayıt olmak için bilgilerinizi girin</p>
        </div>
        <form asp-action="Register" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="Name" class="form-label">Ad</label>
                <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="Adınızı girin" required>
                <div class="invalid-feedback">Lütfen adınızı girin.</div>
            </div>
            <div class="mb-3">
                <label for="Surname" class="form-label">Soyad</label>
                <input asp-for="Surname" type="text" class="form-control" id="Surname" name="Surname" placeholder="Soyadınızı girin" required>
                <div class="invalid-feedback">Lütfen soyadınızı girin.</div>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input asp-for= "username" type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı adınızı girin" required>
                <div class="invalid-feedback">Lütfen kullanıcı adınızı girin.</div>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" type="email" class="form-control" id="Email" name="Email" placeholder="E-posta adresinizi girin" required>
                <div class="invalid-feedback">Lütfen geçerli bir e-posta adresi girin.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input asp-for="password" type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
                <div class="invalid-feedback">Lütfen şifrenizi girin.</div>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                <input asp-for="confirmPassword" type="password"class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Şifrenizi tekrar girin" required>
                <div class="invalid-feedback">Lütfen şifrenizi tekrar girin.</div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            <a href="@Url.Action("Login", "Account")" class="login-link">Zaten bir hesabınız var mı? Giriş Yap</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>
