@model List<KTRS.Models.Kat>
@{
    ViewData["Title"] = "Kat Listesi";
    var block = ViewBag.Block as KTRS.Models.Block;
}

<h2>@($"Blok: {block?.Ad} - Katlar")</h2>

<p>
    <!-- Kat Ekle sayfasına link; blockId parametresini taşıyoruz -->
    <a asp-action="Create" asp-route-blockId="@block?.Id" class="btn btn-primary">Yeni Kat Ekle</a>
    |
    <a asp-controller="Block" asp-action="Index" class="btn btn-secondary">Blok Listesine Dön</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>KatNo</th>
            <th>MaxRow</th>
            <th>MaxCol</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kat in Model)
        {
            <tr>
                <td>@kat.Id</td>
                <td>@kat.KatNo</td>
                <td>@kat.MaxRow</td>
                <td>@kat.MaxCol</td>
                <td>
                    <!-- Koltuklar linki (KoltukController/Index?katId=xxx) -->
                    <a asp-area="" asp-controller="Koltuk" asp-action="Index" asp-route-katId="@kat.Id" class="btn btn-info">Koltuk Düzeni</a> |
                    <a asp-action="PlanEditor" asp-route-id="@kat.Id" class="btn btn-warning">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@kat.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
